<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">



    <!-- 상단 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarWeight"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        app:title="Weight Converter"
        app:titleTextColor="#FFFFFF" />

    <!-- 카테고리 탭 (Length, Temperature, Weight, Help) -->
    <GridLayout
        android:id="@+id/gridTabs"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:columnCount="4"
        android:background="#5b4a3a"
        android:padding="6dp">

        <!-- Length -->
        <ImageView
            android:id="@+id/imageLength"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/length" />

        <!-- Temperature -->
        <ImageView
            android:id="@+id/imageTemperature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/temperature" />

        <!-- Weight -->
        <ImageView
            android:id="@+id/imageWeight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/weight" />

        <!-- Help -->
        <ImageView
            android:id="@+id/imageHelp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/help" />
    </GridLayout>
    <!-- 입력 행: 값 + 입력단위 스피너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffff"
        android:elevation="3dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etValueWeight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/spFromWeight"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- 결과 표 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:layout_margin="8dp">

        <TableLayout
            android:id="@+id/tableWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:padding="8dp">

            <!-- 헤더 -->
            <TableRow
                android:background="#D0D0D0"
                android:padding="6dp">
                <TextView
                    android:text="Value"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:text="Unit"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            </TableRow>

            <!-- 행들은 자바 코드에서 동적 추가 -->
        </TableLayout>
    </ScrollView>
</LinearLayout>
